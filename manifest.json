{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "openhubspot@rubenordonez.com",
      "strict_min_version": "68.0"
    }
  },
  "icons": {
    "48": "icons/48.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "__MSG_browseractionCaption__",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "developer": {
    "name": "Ruben Ordonez",
    "url": "https://github.com/digitalkool/openhubspot"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "cookies",
    "menus",
    "activeTab"
  ]
}
